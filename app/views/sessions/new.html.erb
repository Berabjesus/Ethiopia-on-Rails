
<div class="border mt-3 py-3 col-sm-5 mx-auto bg-theme text-dark">
  <div class="border-bottom text-center">
    <h1>Login</h1>
  </div>
  <h1 class="my-4 text-center">Login</h1>
  <%= form_tag '/sessions', class: 'form-horizontal' do %>
  <div class="form-group">
    <%= label_tag :name, "User Name"%>
    <%= text_field_tag :name,"", placeholder: 'Your User Name here', class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= label_tag :password%>
    <%= password_field_tag :password,"",placeholder: 'Your password here', class: 'form-control'%>
  </div>
  <div class="form-group w-100 text-center">
    <%= submit_tag "Login", class: 'btn btn-info'%>
  </div>
  <%end%>

  <div class="mt-4 d-flex justify-content-center">
    <p class="mb-2">Not Signed up?</p>
    <%= link_to 'Sign Up', new_user_path, class: 'btn-link ml-2'%>
  </div>
</div>